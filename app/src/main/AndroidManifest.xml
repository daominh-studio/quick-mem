<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.INTERNET"/>

    <application
            android:allowBackup="true"
            android:dataExtractionRules="@xml/data_extraction_rules"
            android:fullBackupContent="@xml/backup_rules"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name"
            android:roundIcon="@mipmap/ic_launcher_round"
            android:supportsRtl="true"
            android:theme="@style/Theme.QuickMem"
            tools:targetApi="31">
        <activity
                android:name=".ui.activities.create.CreateClassActivity"
                android:exported="false"/>
        <activity
                android:name=".ui.activities.create.CreateFolderActivity"
                android:exported="false"/>
        <activity
                android:name=".ui.activities.create.CreateSetActivity"
                android:exported="false"/>
        <activity
                android:name=".ui.activities.MainActivity"
                android:windowSoftInputMode="adjustNothing"
                android:exported="false"/>
        <activity
                android:name=".ui.activities.auth.signup.SignUpActivity"
                android:exported="false"
                android:theme="@style/AppBottomSheetDialogTheme"/>
        <activity
                android:name=".ui.activities.auth.signin.SignInActivity"
                android:exported="false"
                android:windowSoftInputMode="adjustNothing"/>
        <activity
                android:name=".ui.activities.auth.AuthenticationActivity"
                android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <meta-data
                android:name="preloaded_fonts"
                android:resource="@array/preloaded_fonts"/>
    </application>

</manifest>