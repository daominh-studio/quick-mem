<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.activities.folder.ViewFolderActivity">

    <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white_gray"
            android:elevation="@dimen/_10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:navigationIcon="@drawable/ic_arrow_back"
            app:title="Folder"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/name_folder"
            android:textSize="@dimen/_25ssp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/toolbar"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="@dimen/_16dp"
            android:layout_marginTop="@dimen/_16dp"
            android:layout_marginBottom="@dimen/_8ssp"
            android:textColor="@color/dark_gray"
            android:id="@+id/folder_name_tv"/>

    <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/_16ssp"
            android:text="@string/_1_term"
            android:textStyle="bold"
            android:layout_marginStart="@dimen/_16sp"
            android:textColor="@color/gray"
            app:layout_constraintStart_toEndOf="@id/folder_name_tv"
            app:layout_constraintTop_toTopOf="@id/folder_name_tv"
            app:layout_constraintBottom_toBottomOf="@id/folder_name_tv"
            android:id="@+id/term_count_tv"/>


    <Button
            android:layout_marginVertical="@dimen/_30ssp"
            android:layout_width="match_parent"
            android:layout_marginHorizontal="@dimen/_30ssp"
            android:layout_height="wrap_content"
            android:text="@string/learn_this_folder"
            android:background="@drawable/button_background"
            android:textColor="@color/white"
            android:textAllCaps="false"
            android:textStyle="bold"
            android:textSize="@dimen/_16ssp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/learn_this_folder_btn"
            app:layout_constraintTop_toBottomOf="@id/folder_name_tv"/>

    <androidx.recyclerview.widget.RecyclerView
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/learn_this_folder_btn"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:id="@+id/set_rv"
            android:layout_marginHorizontal="@dimen/_16ssp"/>

</androidx.constraintlayout.widget.ConstraintLayout>